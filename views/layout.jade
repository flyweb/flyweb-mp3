doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="stylesheet" href="/static/css/bootstrap.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		script(src="/static/js/jquery.js" charset="utf-8")
		script(src="/static/js/angular.min.js" charset="utf-8")
		script(src="/javascripts/angapp.js")
		script.
			var track = !{JSON.stringify(track)};
		block head
	body(ng-app="angApp")
		div(ng-controller="angCon")
			div.nav
				a.fill(href="/")
					p=title
				div.menu
					a(href="/")
						img.menu(src="/images/menu.png")
			div.pane
				block content
			div
				block init
			div.bottomfloat
				block bottom
				div.footer
					p.footer {{track.props.name}}
					p.footer.tracker {{get_tracker_text()}}
